<!DOCTYPE html>
<html>
  <head>
    <title>Inventario</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <header class="navbar navbar-default navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Inventario", root_path, class: "navbar-brand" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <% if session[:auth] %>
            <ul class="nav navbar-nav navbar-left">
              <li class=<%= navbar_activate :dashboard %>>
                <%= link_to "Dashboard", root_path %>
              </li>
              <li class=<%= navbar_activate :report %>>
                <%= link_to "Reportes", reports_new_path %>
              </li>
              <li class=<%= navbar_activate :network %>>
                <%= link_to "Redes", sections_path %>
              </li>
              <li class=<%= navbar_activate :hosting_virtual %>>
                <%= link_to "Hospedaje Virtualizado", data_centers_path %>
              </li>
            </ul>
            <%= link_to "Cerrar SesiÃ³n", sign_out_path, class: "sign_out btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
