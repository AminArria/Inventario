<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Direcciones IP de <%= link_to @subnet.cidr, subnet_path(@subnet) %></h3>
    </div>
    <div class="panel-body">
      <%= link_to icon("arrow-left", "Subredes"), section_subnets_path(@subnet.section), class: "btn btn-warning" %>
      <div class="table-responsive">
        <table class="table" id="datatable">
          <thead>
            <tr>
              <th>IP</th>
              <th>En uso</th>
              <th>Acciones</th>
            </tr>
          </thead>

          <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.ip %></td>
                <td><%= address.active ? "Si" : "No" %></td>
                <td>
                  <%#= link_to(icon('search'), address_path(address)) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
